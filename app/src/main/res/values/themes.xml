<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Itmoexample" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/active</item>
        <item name="colorPrimaryVariant">@color/disabled</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/line</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="title" parent="Theme.Itmoexample">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="inputField" parent="Theme.Itmoexample">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="inputFieldWrapper" parent="Theme.Itmoexample">
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="android:background">@drawable/input_field_active</item>
    </style>
    <style name="button" parent="Theme.Itmoexample">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/base</item>
        <item name="android:background">@drawable/button_active</item>
        <item name="textAllCaps">true</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="iconButton" parent="Theme.MaterialComponents">
        <item name="materialThemeOverlay">@style/iconButton</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="iconTint">@color/active</item>
        <item name="background">@drawable/button_inverse</item>
    </style>
</resources>